<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:weightSum="1">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:id="@+id/rBChildGatheringLayer"
            android:layout_weight="0.95" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/layerUp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/layer_up"
                android:layout_alignTop="@+id/cBChildLayer"
                android:contentDescription="layerUp"
                />

            <ImageView
                android:id="@+id/layerDown"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/layer_down"
                android:contentDescription="layerDown"
                />

            <ImageView
                android:id="@+id/zoomExtent"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/layer_extent"
                android:contentDescription="zoomExtent" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>