<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp">
    <RadioButton
        android:id="@+id/rBCurrentProject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:enabled="false"/>
    <TextView
        android:id="@+id/tVProjectName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_weight="5"/>
    <ImageView
        android:id="@+id/iVDownloaded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:src="@drawable/not_downloaded" />
    <ImageView
        android:id="@+id/iVDiskUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        />
        <!-- android:src="@drawable/device_not_updated" -->
    <ImageView
        android:id="@+id/iVServerUpdated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        />
<!--    <ImageView
        android:id="@+id/iVMoveToSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="5dp"
        android:src="@drawable/ic_backup_sdcard"
        android:onClick="onMoveToSDCard"/>-->
    <!-- android:src="@drawable/server_not_updated" -->
</LinearLayout>